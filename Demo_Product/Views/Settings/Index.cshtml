@model Demo_Product.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil Bilgileri Düzenleme Sayfası</h1>

<form method="post">
    @Html.Label("Adınız")
    <input  type="text" asp-for="Name"  class="form-controler" />
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="Surname" class="form-controler" />
    <br />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Mail" class="form-controler" />
    <br />
    @Html.Label("Cinsiyet")
    <input type="text" asp-for="Gender" class="form-controler" />
    <br />
    @Html.Label("Şifre")
    <input type="text" asp-for="Password" class="form-controler" />
    <br />
    @Html.Label("Şifre Tekrarı")
    <input type="text" asp-for="ConfirmPassword" class="form-controler" />
    <br />
    <button class="btn btn-warning">Degişiklikleri Kaydet</button>

</form>